<Window x:Class="Schiffe_versenken.MatchfieldSize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schiffe_versenken"
        mc:Ignorable="d"
        Title="MatchfieldSize" Height="200" Width="231">
    <Grid>
        <StackPanel>
            <Label x:Name="SizeX" Content="Height"></Label>
            <TextBox x:Name="SizeXBox"></TextBox>
            <Label x:Name="SizeY" Content="Width"></Label>
            <TextBox x:Name="SizeYBox"></TextBox>
            <Button x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
