<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="30">
            <Button x:Name="SendButton" Content="Send" Click="SendButton_Click" DockPanel.Dock="Right" Width="50"></Button>
            <TextBox x:Name="InputBox"></TextBox>
        </DockPanel>
        <ListBox x:Name="MSGBox"></ListBox>
    </DockPanel>
</Window>
